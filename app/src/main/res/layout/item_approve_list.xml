<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/_70dp"
        android:layout_height="match_parent">

        <View
            android:id="@+id/tvTopLine"
            android:layout_width="@dimen/_2dp"
            android:layout_height="@dimen/_30dp"
            android:layout_centerHorizontal="true"
            android:background="#dddddd" />

        <RelativeLayout
            android:id="@+id/re_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTopLine"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:background="@drawable/shape_circle_green_txt" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:layout_centerInParent="true"
                android:textColor="@color/grey_table2"
                android:textSize="12sp" />

        </RelativeLayout>


        <View
            android:id="@+id/ivBottomLine"
            android:layout_width="@dimen/_2dp"
            android:layout_height="match_parent"
            android:layout_below="@id/re_status"
            android:layout_centerHorizontal="true"
            android:background="#dddddd" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tx_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-10-18"
                android:layout_marginTop="@dimen/_15dp"
                android:textColor="@color/grey_aeaeae"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_is_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="采购确认:全剑强  同意"
                android:layout_marginTop="@dimen/_10dp"
                android:textColor="@color/grey_aeaeae"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@color/grey_table" />

    </LinearLayout>

</LinearLayout>