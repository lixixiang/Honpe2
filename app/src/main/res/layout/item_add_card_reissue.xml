<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/background2">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_20dp"
        android:paddingEnd="@dimen/_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5dp"
            android:text="补卡时间"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/et_trips_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="请选择"
            android:textSize="16sp"
            android:drawablePadding="@dimen/_20dp"
            android:drawableEnd="@drawable/fragmentation_ic_right"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/shape_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_1dp"
        android:paddingStart="@dimen/_20dp"
        android:paddingEnd="@dimen/_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5dp"
            android:text="补卡类型"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/et_trips_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="请选择"
            android:textSize="16sp"
            android:drawablePadding="@dimen/_10dp"
            android:drawableEnd="@drawable/fragmentation_ic_right"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/shape_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缺卡原因"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="top"
            android:textCursorDrawable="@drawable/shape_black"
            android:textSize="16sp"
            android:hint="请输入"/>
    </LinearLayout>




    <include layout="@layout/btn_change_state"/>
</LinearLayout>