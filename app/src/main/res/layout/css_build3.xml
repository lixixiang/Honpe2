<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_5dp">

            <com.example.lxx.myalipay.widget.font.FontTextView4
                android:id="@+id/font_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#xe611;"
                android:layout_gravity="end"
                android:textColor="@color/list_bottom"
                android:textSize="14sp"
                android:layout_marginEnd="@dimen/_10dp"
                android:gravity="center_vertical|end"
                android:visibility="gone" />

            <com.example.lxx.myalipay.widget.font.FontTextView4
                android:id="@+id/font_mob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#xe634;"
                android:layout_gravity="end"
                android:gravity="center_vertical|end"
                android:textColor="@color/list_bottom"
                android:textSize="14sp"
               android:visibility="gone"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.example.lxx.myalipay.widget.font.FontTextView5
            android:id="@+id/Font5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:text="&#xe6e5;"
            android:textColor="@color/gray"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/ll_depart_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部门:"
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_depart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:text="研发部"
                android:textColor="@color/list_bottom"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:text="组别:"
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="其他"
                android:textColor="@color/list_bottom"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="赵晨光 男"
                android:textColor="@color/green"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_BeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="床位1(上)"
                android:textColor="@color/list_bottom"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>