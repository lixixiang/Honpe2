<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:focusable="true"
    android:paddingStart="@dimen/_20dp"
    android:paddingEnd="@dimen/_20dp"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/css_title"
        android:layout_width="@dimen/_70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="原始密码"
        android:textColor="@color/white_a5"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/css_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_toStartOf="@+id/css_iv_cha"
        android:layout_toEndOf="@+id/css_title"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:padding="@dimen/_1dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/white_a5"
        android:textCursorDrawable="@drawable/shape_black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/css_iv_cha"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        android:src="@mipmap/cha" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/list_bottom"/>
</RelativeLayout>

