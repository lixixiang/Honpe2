<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/background2"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_menu"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/_200dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48dp"
        android:layout_marginBottom="@dimen/_1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Year_Month"
            android:layout_width="@dimen/_200dp"
            android:layout_height="match_parent"
            android:background="@color/grey_table2"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:text="午餐"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/google_green"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:text="晚餐"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/google_red"
            android:layout_weight="3"/>
    </LinearLayout>

    <include layout="@layout/item_title_table" />

    <LinearLayout
        android:id="@+id/ll_table"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48dp"
        android:background="@color/background_e"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="@dimen/_100dp"
            android:layout_height="match_parent"
            android:background="@color/grey_table2"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_2dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_2dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/time1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_2dp"
                android:background="@color/grey_table2"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_2dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/num1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_2dp"
                android:background="@color/grey_table2"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_2dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/time2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_2dp"
                android:background="@color/grey_table2"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_2dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/num2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_2dp"
                android:background="@color/grey_table2"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>