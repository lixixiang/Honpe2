<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <com.parkingwang.keyboard.view.InputView
        android:id="@+id/input_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="6dp"
        style="@style/PWKInputViewStyle"
        app:pwkInputTextSize="22sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/verify_checkbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换规则校验"
            android:checked="true"/>

        <Button
            android:id="@+id/lock_type"
            android:layout_marginLeft="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_ocean"
            android:textColor="@color/white"
            android:text="@string/pwk_change_to_energy"/>
    </LinearLayout>
    <Button
        android:id="@+id/ok"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:textColor="@color/white"
        android:text="@android:string/ok"/>
</LinearLayout>
