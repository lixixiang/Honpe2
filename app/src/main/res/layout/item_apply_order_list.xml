<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_48dp"
    android:background="@color/background_e"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <com.example.lxx.myalipay.widget.font.FontTextView4
        android:id="@+id/tv_font_date"
        android:layout_width="@dimen/_100dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_1dp"
        android:background="@color/grey_table2"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_1dp"
        android:layout_weight="2">

        <com.example.lxx.myalipay.widget.font.FontTextView4
            android:id="@+id/tv_time1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_1dp"
            android:background="@color/grey_table2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_1dp"
        android:layout_weight="1">

        <com.example.lxx.myalipay.widget.font.FontTextView4
            android:id="@+id/tv_person_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_1dp"
            android:background="@color/grey_table2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_1dp"
        android:layout_weight="2">

        <com.example.lxx.myalipay.widget.font.FontTextView4
            android:id="@+id/tv_time2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_1dp"
            android:background="@color/grey_table2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_1dp"
        android:layout_weight="1">

        <com.example.lxx.myalipay.widget.font.FontTextView4
            android:id="@+id/tv_person_num2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_1dp"
            android:background="@color/grey_table2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </RelativeLayout>


</LinearLayout>