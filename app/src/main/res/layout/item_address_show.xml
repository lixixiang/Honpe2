<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10dp"
    android:paddingEnd="@dimen/_15dp"
    android:paddingTop="@dimen/_10dp"
    android:layout_marginTop="@dimen/_5dp"
    android:background="@color/white"
    android:paddingStart="@dimen/_15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/consignee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小庄"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/consignee_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10dp"
            android:text="158*****397"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:background="@color/white"
        android:id="@+id/consignee_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_5dp"
        android:paddingTop="@dimen/_5dp"
        android:text="广州市天河区五山路141号"
        android:textColor="@color/cardview_shadow_start_color"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/cardview_shadow_end_color"
        />

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:id="@+id/radio_selected"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/CustomCheckboxTheme"/>

        <TextView
            android:id="@+id/radio_selectedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/radio_selected"
            android:paddingLeft="@dimen/_10dp"
            android:text="设为默认"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/ll_edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_edite_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.lxx.myalipay.widget.font.FontTextView
                    android:id="@+id/edite_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/grey"
                    android:text="&#xe62e;"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_10dp"
                    android:paddingStart="@dimen/_10dp"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:text="编缉"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_delete_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.lxx.myalipay.widget.font.FontTextView
                    android:id="@+id/delete_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="&#xe60c;"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingEnd="@dimen/_10dp"
                    android:textSize="16sp"
                    android:text="删除"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>